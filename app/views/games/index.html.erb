
<h3><%= link_to "Sign Out", '/users/sign_out' %></h3>


  <% if @games.any? %>
    <% @games.each do |game| %>
      <p><h3><%= link_to game.name, game_path(game) %></h3> | <%= number_to_currency game.price %>
    <% end %></p>
  <% else %>
    <h3>Sorry, there are no games yet D:</h3>
  <% end %>
  <h3><%= link_to "Admin Add a Game", new_game_path %></h3>

  <% if current_user.admin? %>
  <h3><%= link_to "Add a Game", new_game_path %></h3>
  <% end %>
  
